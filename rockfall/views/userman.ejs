<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>User Management - Dark UI</title>
<link rel="stylesheet" href="/css/userman.css">
</head>
<body>
  <div class="container">

    
    <section class="card" aria-labelledby="um-title">
      <div class="header">
        <div>
          <h1 id="um-title" class="title">User Management</h1>
          <div class="subtitle">Manage user accounts and permissions</div>
        </div>
        <button class="btn-add" id="addUserBtn" title="Add user">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden style="display:block">
            <path d="M12 5v14M5 12h14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            <circle cx="17.5" cy="6.5" r="2.5" stroke="white" stroke-width="1.4"></circle>
          </svg>
          Add User
        </button>
      </div>

      <div class="users" id="usersList">       
        <div class="user-row"><div class="user-left"><div class="avatar">N</div><div class="user-info"><div class="user-name">Neer Malik</div><div class="user-email">neermalik6161@gmail.com</div></div></div><div class="user-right"><div style="text-align:right"><div class="role-badge">Admin</div><div class="status active">Active</div></div><button class="action-btn" title="Edit">✏️</button><button class="action-btn delete" title="Delete">🗑️</button></div></div>
        <div class="user-row"><div class="user-left"><div class="avatar">N</div><div class="user-info"><div class="user-name">Neer Malik</div><div class="user-email">neermalik6161@gmail.com</div></div></div><div class="user-right"><div style="text-align:right"><div class="role-badge">Mine Planner</div><div class="status active">Active</div></div><button class="action-btn" title="Edit">✏️</button><button class="action-btn delete" title="Delete">🗑️</button></div></div>
        <div class="user-row"><div class="user-left"><div class="avatar">P</div><div class="user-info"><div class="user-name">Parthiv Patel</div><div class="user-email">kanzariya@gmail.com</div></div></div><div class="user-right"><div style="text-align:right"><div class="role-badge">Technician</div><div class="status active">Active</div></div><button class="action-btn" title="Edit">✏️</button><button class="action-btn delete" title="Delete">🗑️</button></div></div>
        <div class="user-row"><div class="user-left"><div class="avatar">D</div><div class="user-info"><div class="user-name">Dhruv Diguvapalli</div><div class="user-email">diguvapallidhruv@gmail.com</div></div></div><div class="user-right"><div style="text-align:right"><div class="role-badge">Analyst</div><div class="status inactive">Inactive</div></div><button class="action-btn" title="Edit">✏️</button><button class="action-btn delete" title="Delete">🗑️</button></div></div>
