      </div>
    </section>

    
    <section class="permissions card" aria-labelledby="perm-title">
      <div style="display:flex;justify-content:space-between;align-items:flex-start;gap:16px;flex-wrap:wrap">
        <div style="flex:1;min-width:260px">
          <h3 id="perm-title">Role Permissions</h3>
          <p>Configure permissions for each user role</p>
        </div>
      </div>

      <div style="margin-top:10px;overflow-x:auto">
        <table class="perm-table" role="table" aria-label="Role permissions">
          <thead>
            <tr>
              <th class="perm-left">Permission</th>
              <th class="role-col">Admin</th>
              <th class="role-col">Mine Planner</th>
              <th class="role-col">Technician</th>
            </tr>
          </thead>
          <tbody id="permBody"></tbody>
        </table>
      </div>
    </section>

  </div>

<script src="/js/userman.js"></script>
</body>
</html>
